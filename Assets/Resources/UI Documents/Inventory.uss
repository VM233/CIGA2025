.slot {
    width: 100px;
    height: 100px;
}

.slot-description {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    -unity-text-align: lower-right;
    padding-top: 10px;
    padding-right: 10px;
    padding-bottom: 10px;
    padding-left: 10px;
    font-size: 32px;
}

.slot-icon {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}
